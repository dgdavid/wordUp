.container(ng-controller='MainCtrl as mvm')
  .page-header.text-center
    h1.text-primary word Up!
  .well
    .row
      .col-xs-8.col-xs-offset-2.col-md-4.col-md-offset-4
        input(type='text'
          class='form-control input-lg'
          ng-model='mvm.word'
          ng-model-options='{ debounce: 500 }')
    .row
      h2.text-center.text-muted(ng-if='mvm.word')
        / {{ mvm.word }} /
  hr
